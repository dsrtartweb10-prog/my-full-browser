{
  "name": "my-full-browser",
  "version": "1.0.0",
  "description": "Custom Electron Browser",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .", 
    "test": "jest --runInBand",
    "test:unit": "jest src/test/unit",
    "test:integration": "jest src/test/integration",
    "test:e2e": "jest src/test/e2e",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.myfullbrowser.app",
    "productName": "MyFullBrowser",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2",
    "jest": "^29.7.0"
  }
}
